{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/task.schema.json",
  "title": "Task Document",
  "type": "object",
  "properties": {
    "completed": {
      "type": "boolean",
      "description": "Whether the task is completed"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Task creation timestamp"
    },
    "details": {
      "type": "string",
      "description": "Detailed description of the task"
    },
    "title": {
      "type": "string",
      "description": "Task title"
    },
    "user": {
      "type": "string",
      "pattern": "^/users/[A-Za-z0-9]+$",
      "description": "Firestore document reference to the user who owns the task"
    }
  },
  "required": [
    "completed",
    "created",
    "details",
    "title",
    "user"
  ],
  "additionalProperties": false
}
